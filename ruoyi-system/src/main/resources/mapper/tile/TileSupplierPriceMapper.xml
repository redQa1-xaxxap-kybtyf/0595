<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.tile.mapper.TileSupplierPriceMapper">
    
    <resultMap type="TileSupplierPrice" id="TileSupplierPriceResult">
        <result property="priceId"    column="price_id"    />
        <result property="supplierId"    column="supplier_id"    />
        <result property="supplierName"    column="supplier_name"    />
        <result property="categoryName"    column="category_name"    />
        <result property="specification"    column="specification"    />
        <result property="model"    column="model"    />
        <result property="piecePrice"    column="piece_price"    />
        <result property="squarePrice"    column="square_price"    />
        <result property="unitPrice"    column="unit_price"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectTileSupplierPriceVo">
        select p.price_id, p.supplier_id, s.supplier_name, p.category_name, p.specification, p.model, p.piece_price, p.square_price, p.unit_price, p.status, p.del_flag, p.create_by, p.create_time, p.update_by, p.update_time, p.remark 
        from tile_supplier_price p
        left join tile_supplier s on p.supplier_id = s.supplier_id
    </sql>

    <select id="selectTileSupplierPriceList" parameterType="TileSupplierPrice" resultMap="TileSupplierPriceResult">
        <include refid="selectTileSupplierPriceVo"/>
        <where>  
            <if test="supplierId != null "> and p.supplier_id = #{supplierId}</if>
            <if test="categoryName != null  and categoryName != ''"> and p.category_name like concat('%', #{categoryName}, '%')</if>
            <if test="specification != null  and specification != ''"> and p.specification like concat('%', #{specification}, '%')</if>
            <if test="model != null  and model != ''"> and p.model like concat('%', #{model}, '%')</if>
            <if test="piecePrice != null "> and p.piece_price = #{piecePrice}</if>
            <if test="squarePrice != null "> and p.square_price = #{squarePrice}</if>
            <if test="unitPrice != null "> and p.unit_price = #{unitPrice}</if>
            <if test="status != null  and status != ''"> and p.status = #{status}</if>
            and p.del_flag = '0'
        </where>
    </select>
    
    <select id="selectTileSupplierPriceByPriceId" parameterType="Long" resultMap="TileSupplierPriceResult">
        <include refid="selectTileSupplierPriceVo"/>
        where p.price_id = #{priceId}
    </select>

    <select id="selectTileSupplierPriceBySupplierId" parameterType="Long" resultMap="TileSupplierPriceResult">
        <include refid="selectTileSupplierPriceVo"/>
        where p.supplier_id = #{supplierId} and p.del_flag = '0'
    </select>
        
    <insert id="insertTileSupplierPrice" parameterType="TileSupplierPrice" useGeneratedKeys="true" keyProperty="priceId">
        insert into tile_supplier_price
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="supplierId != null">supplier_id,</if>
            <if test="categoryName != null">category_name,</if>
            <if test="specification != null">specification,</if>
            <if test="model != null">model,</if>
            <if test="piecePrice != null">piece_price,</if>
            <if test="squarePrice != null">square_price,</if>
            <if test="unitPrice != null">unit_price,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="supplierId != null">#{supplierId},</if>
            <if test="categoryName != null">#{categoryName},</if>
            <if test="specification != null">#{specification},</if>
            <if test="model != null">#{model},</if>
            <if test="piecePrice != null">#{piecePrice},</if>
            <if test="squarePrice != null">#{squarePrice},</if>
            <if test="unitPrice != null">#{unitPrice},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateTileSupplierPrice" parameterType="TileSupplierPrice">
        update tile_supplier_price
        <trim prefix="SET" suffixOverrides=",">
            <if test="supplierId != null">supplier_id = #{supplierId},</if>
            <if test="categoryName != null">category_name = #{categoryName},</if>
            <if test="specification != null">specification = #{specification},</if>
            <if test="model != null">model = #{model},</if>
            <if test="piecePrice != null">piece_price = #{piecePrice},</if>
            <if test="squarePrice != null">square_price = #{squarePrice},</if>
            <if test="unitPrice != null">unit_price = #{unitPrice},</if>
            <if test="status != null">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where price_id = #{priceId}
    </update>

    <delete id="deleteTileSupplierPriceByPriceId" parameterType="Long">
        update tile_supplier_price set del_flag = '2' where price_id = #{priceId}
    </delete>

    <delete id="deleteTileSupplierPriceByPriceIds" parameterType="String">
        update tile_supplier_price set del_flag = '2' where price_id in 
        <foreach item="priceId" collection="array" open="(" separator="," close=")">
            #{priceId}
        </foreach>
    </delete>
</mapper>
