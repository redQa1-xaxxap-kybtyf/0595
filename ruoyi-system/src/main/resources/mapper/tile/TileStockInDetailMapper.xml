<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.tile.mapper.TileStockInDetailMapper">
    
    <resultMap type="TileStockInDetail" id="TileStockInDetailResult">
        <result property="detailId"    column="detail_id"    />
        <result property="inId"        column="in_id"        />
        <result property="goodsId"     column="goods_id"     />
        <result property="quantity"    column="quantity"     />
        <result property="price"       column="price"        />
        <result property="amount"      column="amount"       />
        <result property="remark"      column="remark"       />
        <association property="goods"  column="goods_id" javaType="TileGoods" resultMap="goodsResult" />
    </resultMap>
    
    <resultMap id="goodsResult" type="TileGoods">
        <id     property="goodsId"     column="goods_id"     />
        <result property="goodsName"   column="goods_name"   />
        <result property="goodsCode"   column="goods_code"   />
        <result property="categoryId"  column="category_id"  />
        <result property="specId"      column="spec_id"      />
        <result property="materialId"  column="material_id"  />
        <result property="patternId"   column="pattern_id"   />
        <result property="surfaceId"   column="surface_id"   />
        <result property="usageId"     column="usage_id"     />
    </resultMap>

    <sql id="selectTileStockInDetailVo">
        select d.detail_id, d.in_id, d.goods_id, d.quantity, d.price, d.amount, d.remark,
               g.goods_name, g.goods_code, g.category_id, g.spec_id, g.material_id, g.pattern_id, g.surface_id, g.usage_id
        from tile_stock_in_detail d
        left join tile_goods g on g.goods_id = d.goods_id
    </sql>

    <select id="selectTileStockInDetailList" parameterType="TileStockInDetail" resultMap="TileStockInDetailResult">
        <include refid="selectTileStockInDetailVo"/>
        <where>  
            <if test="inId != null "> and d.in_id = #{inId}</if>
            <if test="goodsId != null "> and d.goods_id = #{goodsId}</if>
        </where>
    </select>
    
    <select id="selectTileStockInDetailByDetailId" parameterType="Long" resultMap="TileStockInDetailResult">
        <include refid="selectTileStockInDetailVo"/>
        where d.detail_id = #{detailId}
    </select>

    <select id="selectTileStockInDetailByInId" parameterType="Long" resultMap="TileStockInDetailResult">
        <include refid="selectTileStockInDetailVo"/>
        where d.in_id = #{inId}
    </select>
        
    <insert id="insertTileStockInDetail" parameterType="TileStockInDetail" useGeneratedKeys="true" keyProperty="detailId">
        insert into tile_stock_in_detail
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="inId != null">in_id,</if>
            <if test="goodsId != null">goods_id,</if>
            <if test="quantity != null">quantity,</if>
            <if test="price != null">price,</if>
            <if test="amount != null">amount,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="inId != null">#{inId},</if>
            <if test="goodsId != null">#{goodsId},</if>
            <if test="quantity != null">#{quantity},</if>
            <if test="price != null">#{price},</if>
            <if test="amount != null">#{amount},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <insert id="batchInsertTileStockInDetail">
        insert into tile_stock_in_detail(in_id, goods_id, quantity, price, amount, remark) values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.inId}, #{item.goodsId}, #{item.quantity}, #{item.price}, #{item.amount}, #{item.remark})
        </foreach>
    </insert>

    <update id="updateTileStockInDetail" parameterType="TileStockInDetail">
        update tile_stock_in_detail
        <trim prefix="SET" suffixOverrides=",">
            <if test="inId != null">in_id = #{inId},</if>
            <if test="goodsId != null">goods_id = #{goodsId},</if>
            <if test="quantity != null">quantity = #{quantity},</if>
            <if test="price != null">price = #{price},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where detail_id = #{detailId}
    </update>

    <delete id="deleteTileStockInDetailByDetailId" parameterType="Long">
        delete from tile_stock_in_detail where detail_id = #{detailId}
    </delete>

    <delete id="deleteTileStockInDetailByDetailIds" parameterType="String">
        delete from tile_stock_in_detail where detail_id in 
        <foreach item="detailId" collection="array" open="(" separator="," close=")">
            #{detailId}
        </foreach>
    </delete>

    <delete id="deleteTileStockInDetailByInId" parameterType="Long">
        delete from tile_stock_in_detail where in_id = #{inId}
    </delete>
</mapper>
