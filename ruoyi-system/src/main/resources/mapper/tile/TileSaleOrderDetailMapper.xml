<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.tile.mapper.TileSaleOrderDetailMapper">
    
    <resultMap type="TileSaleOrderDetail" id="TileSaleOrderDetailResult">
        <result property="detailId"    column="detail_id"    />
        <result property="orderId"    column="order_id"    />
        <result property="productId"    column="product_id"    />
        <result property="quantity"    column="quantity"    />
        <result property="price"    column="price"    />
        <result property="amount"    column="amount"    />
        <result property="warehouseId"    column="warehouse_id"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <association property="product"   column="product_id"   javaType="TileGoods"   resultMap="productResult" />
        <association property="warehouse"   column="warehouse_id"   javaType="TileWarehouse"   resultMap="warehouseResult" />
    </resultMap>

    <resultMap id="productResult" type="TileGoods">
        <id     property="goodsId"   column="goods_id"     />
        <result property="goodsName" column="goods_name"   />
        <result property="goodsCode" column="goods_code"   />
    </resultMap>

    <resultMap id="warehouseResult" type="TileWarehouse">
        <id     property="warehouseId"   column="warehouse_id"     />
        <result property="warehouseName" column="warehouse_name"   />
        <result property="warehouseCode" column="warehouse_code"   />
    </resultMap>

    <sql id="selectTileSaleOrderDetailVo">
        select d.detail_id, d.order_id, d.product_id, d.quantity, d.price, d.amount, d.warehouse_id, d.remark, d.create_by, d.create_time, d.update_by, d.update_time,
        g.goods_id, g.goods_name, g.goods_code,
        w.warehouse_id, w.warehouse_name, w.warehouse_code
        from tile_sale_order_detail d
        left join tile_goods g on g.goods_id = d.product_id
        left join tile_warehouse w on w.warehouse_id = d.warehouse_id
    </sql>

    <select id="selectTileSaleOrderDetailList" parameterType="TileSaleOrderDetail" resultMap="TileSaleOrderDetailResult">
        <include refid="selectTileSaleOrderDetailVo"/>
        <where>  
            <if test="orderId != null "> and d.order_id = #{orderId}</if>
            <if test="productId != null "> and d.product_id = #{productId}</if>
            <if test="warehouseId != null "> and d.warehouse_id = #{warehouseId}</if>
        </where>
    </select>
    
    <select id="selectTileSaleOrderDetailByDetailId" parameterType="Long" resultMap="TileSaleOrderDetailResult">
        <include refid="selectTileSaleOrderDetailVo"/>
        where d.detail_id = #{detailId}
    </select>

    <select id="selectTileSaleOrderDetailByOrderId" parameterType="Long" resultMap="TileSaleOrderDetailResult">
        <include refid="selectTileSaleOrderDetailVo"/>
        where d.order_id = #{orderId}
    </select>
        
    <insert id="insertTileSaleOrderDetail" parameterType="TileSaleOrderDetail" useGeneratedKeys="true" keyProperty="detailId">
        insert into tile_sale_order_detail
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="productId != null">product_id,</if>
            <if test="quantity != null">quantity,</if>
            <if test="price != null">price,</if>
            <if test="amount != null">amount,</if>
            <if test="warehouseId != null">warehouse_id,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="productId != null">#{productId},</if>
            <if test="quantity != null">#{quantity},</if>
            <if test="price != null">#{price},</if>
            <if test="amount != null">#{amount},</if>
            <if test="warehouseId != null">#{warehouseId},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateTileSaleOrderDetail" parameterType="TileSaleOrderDetail">
        update tile_sale_order_detail
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="productId != null">product_id = #{productId},</if>
            <if test="quantity != null">quantity = #{quantity},</if>
            <if test="price != null">price = #{price},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="warehouseId != null">warehouse_id = #{warehouseId},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where detail_id = #{detailId}
    </update>

    <delete id="deleteTileSaleOrderDetailByDetailId" parameterType="Long">
        delete from tile_sale_order_detail where detail_id = #{detailId}
    </delete>

    <delete id="deleteTileSaleOrderDetailByDetailIds" parameterType="String">
        delete from tile_sale_order_detail where detail_id in 
        <foreach item="detailId" collection="array" open="(" separator="," close=")">
            #{detailId}
        </foreach>
    </delete>

    <delete id="deleteTileSaleOrderDetailByOrderId" parameterType="Long">
        delete from tile_sale_order_detail where order_id = #{orderId}
    </delete>

    <insert id="batchInsertTileSaleOrderDetail">
        insert into tile_sale_order_detail (
            order_id,
            product_id,
            quantity,
            price,
            amount,
            warehouse_id,
            remark,
            create_by,
            create_time,
            update_by,
            update_time
        ) values
        <foreach item="item" index="index" collection="list" separator=",">
            (
                #{item.orderId},
                #{item.productId},
                #{item.quantity},
                #{item.price},
                #{item.amount},
                #{item.warehouseId},
                #{item.remark},
                #{item.createBy},
                #{item.createTime},
                #{item.updateBy},
                #{item.updateTime}
            )
        </foreach>
    </insert>
</mapper>
