<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.tile.mapper.TileStockMapper">
    
    <resultMap type="com.ruoyi.system.tile.domain.TileStock" id="TileStockResult">
        <result property="stockId"    column="stock_id"    />
        <result property="goodsId"    column="goods_id"    />
        <result property="warehouseId"    column="warehouse_id"    />
        <result property="quantity"    column="quantity"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="goodsName"    column="goods_name"    />
        <result property="goodsCode"    column="goods_code"    />
        <result property="warehouseName"    column="warehouse_name"    />
        <result property="locationName"    column="location_name"    />
        <result property="batchNo"    column="batch_no"    />
        <result property="positionId"    column="position_id"    />
    </resultMap>

    <sql id="selectTileStockVo">
        select s.stock_id, s.goods_id, s.warehouse_id, s.quantity, s.status, s.del_flag, s.create_by, s.create_time, s.update_by, s.update_time, s.remark,
        s.batch_no, s.position_id, g.goods_name, g.goods_code, w.warehouse_name, l.location_name
        from tile_stock s
        left join tile_goods g on s.goods_id = g.goods_id
        left join tile_warehouse w on s.warehouse_id = w.warehouse_id
        left join tile_warehouse_location l on l.location_id = s.position_id
        where s.del_flag = '0'
    </sql>

    <select id="selectTileStockList" parameterType="TileStock" resultMap="TileStockResult">
        <include refid="selectTileStockVo"/>
        <where>  
            <if test="goodsId != null "> and s.goods_id = #{goodsId}</if>
            <if test="warehouseId != null "> and s.warehouse_id = #{warehouseId}</if>
            <if test="quantity != null "> and s.quantity = #{quantity}</if>
            <if test="status != null  and status != ''"> and s.status = #{status}</if>
            <if test="goodsName != null  and goodsName != ''"> and g.goods_name like concat('%', #{goodsName}, '%')</if>
            <if test="goodsCode != null  and goodsCode != ''"> and g.goods_code = #{goodsCode}</if>
            <if test="warehouseName != null  and warehouseName != ''"> and w.warehouse_name like concat('%', #{warehouseName}, '%')</if>
            <if test="batchNo != null and batchNo != ''"> and s.batch_no = #{batchNo}</if>
            <if test="positionId != null"> and s.position_id = #{positionId}</if>
            <if test="locationName != null and locationName != ''"> and l.location_name like concat('%', #{locationName}, '%')</if>
        </where>
        order by s.create_time desc
    </select>
        
    <select id="selectTileStockByStockId" parameterType="Long" resultMap="TileStockResult">
        <include refid="selectTileStockVo"/>
        where s.stock_id = #{stockId}
    </select>
        
    <insert id="insertTileStock" parameterType="TileStock" useGeneratedKeys="true" keyProperty="stockId">
        insert into tile_stock
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="goodsId != null">goods_id,</if>
            <if test="warehouseId != null">warehouse_id,</if>
            <if test="quantity != null">quantity,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="batchNo != null">batch_no,</if>
            <if test="positionId != null">position_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="goodsId != null">#{goodsId},</if>
            <if test="warehouseId != null">#{warehouseId},</if>
            <if test="quantity != null">#{quantity},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="batchNo != null">#{batchNo},</if>
            <if test="positionId != null">#{positionId},</if>
        </trim>
    </insert>

    <update id="updateTileStock" parameterType="TileStock">
        update tile_stock
        <trim prefix="SET" suffixOverrides=",">
            <if test="goodsId != null">goods_id = #{goodsId},</if>
            <if test="warehouseId != null">warehouse_id = #{warehouseId},</if>
            <if test="quantity != null">quantity = #{quantity},</if>
            <if test="status != null">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="batchNo != null">batch_no = #{batchNo},</if>
            <if test="positionId != null">position_id = #{positionId},</if>
        </trim>
        where stock_id = #{stockId}
    </update>

    <delete id="deleteTileStockByStockId" parameterType="Long">
        delete from tile_stock where stock_id = #{stockId}
    </delete>

    <delete id="deleteTileStockByStockIds" parameterType="String">
        delete from tile_stock where stock_id in 
        <foreach item="stockId" collection="array" open="(" separator="," close=")">
            #{stockId}
        </foreach>
    </delete>
</mapper>
